
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:background="#ff4fc3f7">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_above="@+id/spotifyStreamerApp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="35dp"/>


    <Button
        style="@style/MyAppPortfolio"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/libraryApp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <Button
        style="@style/MyAppPortfolio"

        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/scoresApp"
        android:layout_above="@+id/libraryApp"
        android:layout_centerHorizontal="true"
        />

    <Button
        style="@style/MyAppPortfolio"

        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/buildItBiggerApp"
        android:layout_below="@+id/libraryApp"
        android:layout_centerHorizontal="true"/>

    <Button
        style="@style/MyAppPortfolio"

        android:layout_height="wrap_content"
        android:text="XYZ READER APP"
        android:id="@+id/XYZReaderApp"
        android:layout_below="@+id/buildItBiggerApp"
        android:layout_centerHorizontal="true"/>

    <Button
        style="@style/MyAppPortfolio"

        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/capstoneApp"
        android:layout_below="@+id/XYZReaderApp"
        android:layout_centerHorizontal="true"
        android:background="#ffff2530"/>

    <Button
        style="@style/MyAppPortfolio"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/spotifyStreamerApp"
        android:layout_above="@+id/scoresApp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>

